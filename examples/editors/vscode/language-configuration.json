{
  "comments": {
    "lineComment": "--",
    "blockComment": ["{-", "-}"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" },
    { "open": "{-", "close": "-}" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*--\\s*region\\b",
      "end": "^\\s*--\\s*endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "(where|let|do|of|then|else|module|import|def)\\s*$",
    "decreaseIndentPattern": "^\\s*(in|end)\\b"
  }
}
